<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.androidtown.lab07.MainActivity">

    <RelativeLayout
        android:id="@+id/audio1"
        android:tag="music1"
        android:orientation="vertical"
        android:padding="20sp"
        android:clickable="true"
        android:onClick="play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/audio1_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배경음악1"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/audio1_txt2"
            android:layout_below="@+id/audio1_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="샘플음원2" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_below="@+id/audio1_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:02:06" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/audio2"
        android:tag="music1"
        android:orientation="vertical"
        android:padding="20sp"
        android:clickable="true"
        android:onClick="play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audio1">

        <TextView
            android:id="@+id/audio2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배경음악2"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/audio2_txt2"
            android:layout_below="@+id/audio2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="샘플음원2" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_below="@+id/audio2_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:51" />

    </RelativeLayout>

</LinearLayout>
